<div class="container-fluid">

  <div class="row">
    <% if @venue.gp_photos.length > 0 %>
      <div id="gp_photos" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
          <% @venue.gp_photos.each_with_index do |photo, i| %>
            <li data-target="#gp_photos" data-slide-to="<%= i %>" <%= i==0 ? 'class="active"' : '' %>></li>
          <% end %>
        </ol>

        <div class="carousel-inner" role="listbox">
          <% @venue.gp_photos.each_with_index do |photo, i| %>
            <div class="item <%= i==0 ? 'active' : '' %>" style="background-image:url(<%= photo.fetch_url(1024) %>)">
            </div>
          <% end %>
        </div>

        <a class="left carousel-control" href="#gp_photos" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#gp_photos" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="">
      <h1><%= @venue.name %></h1>
      <a href="/?lat=<%= params[:lat] %>&lng=<%= params[:lng] %>&zoom=<%= params[:zoom] %>">Back to map</a>
      <ul class="gigs">
        <% @gigs.each do |gig| %>
          <li>
            <%= gig.time %>
            Book: <%= gig.venue_booking_url %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>

</div>