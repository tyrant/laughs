<% content_for :map_script do %>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= GP::API_KEY %>"></script>
<% end %>

<div class="container-fluid">

  <div id="map"></div>

  <div id="overlay" class="col-sm-6 col-sm-offset-3">
    <form id="filter" method="get" data-remote="true">
      <div class="form-group">
        <label for="comedians">Comedians</label>
        <select name="comedians[]" id="comedians" class="form-control" multiple="multiple">
          <% Comedian.all.each do |comedian| %>
            <option selected="selected" value="<%= comedian.id %>"><%= comedian.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="start_date">Start date</label>
        <div class="input-group date" id="start_date">
          <input type="text" name="start_date" class="form-control" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label for="end_date">End date</label>
        <div class="input-group date" id="end_date">
          <input type="text" name="end_date" class="form-control" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Filter" />
    </form>
  </div>
</div>